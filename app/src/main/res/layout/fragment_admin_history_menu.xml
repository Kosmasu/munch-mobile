<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_borderless_shape"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_header_borderless"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderHistoryMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ID"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tvHeaderHistoryMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Action"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tvHeaderHistoryMenu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Tanggal"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAdminHistoryMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp" />
</LinearLayout>