<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".fragments.CustomerHistoryPemesananFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_header_borderless"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerPemesanan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Provider"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerPemesanan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerPemesanan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tanggal"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCustomerHistoryPemesanan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp" />
</LinearLayout>