<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_light"
    android:gravity="center"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvCartListProvider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="5"
        android:padding="4dp"
        android:text="Toko pak joko"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCartListTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="5"
        android:padding="4dp"
        android:text="Rp. 69.420,00"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCartAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="6"
        android:background="@drawable/rounded_orange_borderless"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dp"
        android:text="Details"
        android:textColor="#000000"
        app:backgroundTint="@null" />
</LinearLayout>