<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRemovePesanan"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_orange_borderless"
            android:gravity="center"
            app:backgroundTint="@null"
            app:icon="@drawable/vector_cross"
            app:iconGravity="textEnd"
            app:iconPadding="0dp" />

        <TextView
            android:id="@+id/tvSummaryTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="1dp"
            android:text="29-02-2023"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSummaryOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:padding="1dp"
        android:text="ayam - Rp.123.000,00"
        android:textColor="#000000"
        android:textSize="18sp" />
</LinearLayout>