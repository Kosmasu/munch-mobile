<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".fragments.GuestRegisterFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <EditText
            android:id="@+id/etRegisterNama"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/etRegisterConfirmPassword"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/etRegisterAlamat"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Alamat"
            android:inputType="textPersonName"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/etRegisterNomorTelepon"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border_light"
            android:ems="10"
            android:hint="Nomor Telepon"
            android:inputType="numberSigned"
            android:minHeight="45dp"
            android:paddingStart="4dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role:"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spRegisterRole"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:entries="@array/roles_user" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_borderless"
            android:text="Register"
            app:backgroundTint="@null"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="187dp"
        android:layout_height="143dp"
        android:scaleType="centerCrop"
        android:src="@drawable/munch"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />
</androidx.constraintlayout.widget.ConstraintLayout>