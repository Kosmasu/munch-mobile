<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".fragments.CustomerHistoryTopupFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_header_borderless"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerTopup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nominal"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerTopup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Response"
            android:textColor="@color/text_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHeaderHistoryCustomerTopup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tanggal"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCustomerHistoryTopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>